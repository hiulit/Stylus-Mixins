root = true

[*]

# Change these settings to your own preference
indent_style = space
indent_size = 2

# We recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.styl]
indent_size = 4

[*.hbs]
indent_size = 4

[*.html]
indent_size = 4

[*.css]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
